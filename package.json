{
  "name": "cssmix",
  "version": "0.1.4",
  "description": "A utility for combining and processing style objects, arrays, and strings.",
  "main": "./dist/cssmix.umd.cjs",
  "module": "./dist/cssmix.js",
  "types": "./dist/cssmix.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cssmix.d.ts",
      "import": "./dist/cssmix.js",
      "require": "./dist/cssmix.umd.cjs"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "test": "vitest run src",
    "test:dev": "vitest dev src",
    "ui": "vitest --ui"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dafengzhen/cssmix.git"
  },
  "homepage": "https://github.com/dafengzhen/cssmix#readme",
  "bugs": {
    "url": "https://github.com/dafengzhen/cssmix/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "keywords": [
    "cssmix",
    "style",
    "css",
    "utility",
    "merge",
    "combine"
  ],
  "author": "dafengzhen",
  "license": "MIT",
  "lint-staged": {
    "**/*": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "packageManager": "npm@11.5.1"
}
